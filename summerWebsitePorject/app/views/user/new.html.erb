<% @user.errors.each do |attr, msg| %>
	<div class="row">
		<%= "#{attr} #{msg}" if @user.errors[attr].first == msg %> 
	</div>
<% end %>
<%= form_for @user, url: user_create_path  do |f| %>
	<div class="container">
		<div class="row">
			<%= f.label :first_name, class: "control-label" %>
			<%= f.text_field :first_name, class: "form-control form-new" %>
		</div>
		<div class="row">
			<%= f.label :last_name , class: "control-label" %>
			<%= f.text_field :last_name, class: "form-control form-new" %>
		</div>
		<div class="row">
			<%= f.label :email, "E-Mail", class:"control-label" %>
			<%= f.email_field :email, class: "form-control form-new" %>
		</div>
		<div class="row">
			<%= f.label :password, class: "control-label" %>
			<%= f.password_field :password, class: "form-control form-new" %>
		</div>
		<div class="row">
			<%= f.submit "Sign Up", class: "btn btn-submit form-new" %>
		</div>
	</div>
<% end %>