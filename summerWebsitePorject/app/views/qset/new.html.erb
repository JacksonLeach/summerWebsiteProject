<%= form_for(@qset, :url => '/questionsets',  html: {class: "form-inline"}) do |f| %>
	<div class="container">
		<div class="row">
			
				<div class="field form-group">
					<%= f.label :name, class: "col-sm-3 control-label" %>
					<%= f.text_field :name, class: "col-sm-7 form-control" %>
				</div>
		</div>
		<div class="row">
		<div id="scrollable">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Question</th>
						<th>Answer</th>
						<th>Distractor Style</th>
						<th>Add in set?</th>
					</tr>
				</thead>
					<tbody>
						<%= f.collection_check_boxes :question_ids, @question_list, :id, :question_text  do |b|%>
							<tr>
								<td><%= b.value %></td>
								<td><%= return_question(b.value).question_text %></td>
								<td><%= return_question(b.value).answer %></td>
								<td><%= return_question(b.value).distractors %></td>
								<td><%= b.check_box %> </td>
							</tr>
						<% end %>
					</tbody>
				
			</table>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-2">
				<%= f.submit "Create Set", class: "btn btn-default btn-form-submit"%>
			</div>
			<div class="col-sm-2">
				<%= link_to "Back", qset_index_path, class: "btn btn-default btn-form-back" %>
			</div> 
		</div>
		<% end %>
	</div>