
<%= form_for(@question, html: { class:  "form-inline"}) do |f| %>
	<div class="containter">
		<div class="row">
			
				<div class="field form-group">
					<%= f.label :question_text, class: 'col-sm-4 control-label form-new' %>
					<div class = "col-sm-8" id="form-new">
						<%= f.text_field :question_text, class: 'form-control form-new' %>
					</div>
					<%= f.label :answer, class: 'col-sm-4 control-label form-new' %>
					<div class="col-sm-8">
						<%= f.text_field :answer, class: 'form-control form-new' %>
					</div>
				</div>
				<div class="field form-group">
					<div class="container">
						<div class="row">
							<div class="col-sm-11">
								<%= f.radio_button :distractors, "explicit", class: 'form-new'%>
								<%=f.label :distractors_explicit,"Explicit", class: 'form-control form-new' %>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-11">
								<%= f.radio_button :distractors, "implicit", class: 'form-new'%>
								<%=f.label :distractors_implicit, "Implicit", class: 'form-control form-new' %>
							</div> 
						</div>
					</div>
				</div>
		</div>
		<div class="row">
				<div class="field form-group">
					
					<div class="col-sm-6">
						<%= f.label :dist1, class: 'control-label form-new' %>
						<%= f.text_field :dist1, class: 'form-control form-new' %>
					</div>
					
					<div class="col-sm-6">
						<%= f.label :dist2, class: 'control-label form-new' %>
						<%= f.text_field :dist2, class: 'form-control form-new' %>
					</div>
					
					<div class="col-sm-6">
						<%= f.label :dist3, class: 'control-label form-new' %>
						<%= f.text_field :dist3, class: 'form-control form-new' %>
					</div>
					
					<div class="col-sm-6">
						<%= f.label :tag, class: 'control-label form-new' %>
						<%= f.text_field :tag, class: 'form-control form-new' %>
					</div>
				</div>
				
		</div>
		<div class="row">
			<div class="col-sm-2">
				<%= f.submit "Create Question", class: "btn btn-default btn-form-submit"%>
			</div>
			<div class="col-sm-2">
				<%= link_to "Back", question_index_path, class: "btn btn-default btn-form-back " %>
			</div> 
		</div>
	</div>
<% end %>