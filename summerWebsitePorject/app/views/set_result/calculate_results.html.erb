<% @answers.each do |a| %>
	<% question = Question.find(a[0].to_i) %>
	<div class="container">
		<div class="row">
			<h3><%= question.question_text %></h3>
		</div>
		<div class="row">
			<div class="col-xs-offset-1 answer-reporting <%= a[1]["'user_answer'"] == question.answer %>">
				Your answer: <%= a[1]["'user_answer'"] %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-offset-1">
				Correct answer: <%= question.answer %>
			</div>
		</div>
	</div>
	<hr class="form-breakpoint">
<% end %>